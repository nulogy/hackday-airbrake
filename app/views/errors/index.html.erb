Found:: <%= @errors.count %> <br />

<table class="table table-striped table-hover">
  <% @errors.each_with_index do |error, index| %>
    <thead>
      <th colspan=2>
          <h2>
            Error #<%= index+1 %>
          </h2>
      </th>

    </thead>

    <tbody>
      <% error.attributes.each do |attribute, value| %>
        <tr>
          <td><%= attribute %></td>
          <td><%= value.inspect %></td>
        </tr>
      <% end %>
    </tbody>

  <% end %>
</table>
