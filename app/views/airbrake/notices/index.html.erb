Found:: <%= @notices.count %> <br />

<table class="table table-striped table-hover">
  <% @notices.each_with_index do |notice, index| %>
    <thead>
      <th colspan=2><h2>Notice #<%= index+1 %> </h2></th>
    </thead>

    <tbody>
      <% notice.attributes.each do |attribute| %>
        <tr>
          <td><%= attribute %></td>
          <td><%= notice.send(attribute).inspect %></td>
        </tr>
      <% end %>
    </tbody>

  <% end %>
</table>
