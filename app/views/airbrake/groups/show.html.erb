<table class="table table-striped table-hover">
  <thead>
    <th colspan=2>
        <h2>
          Group #<%= @group.id %> - <%= link_to 'View Notices', airbrake_notices_url(group_id: @group.id) %> 
        </h2>
    </th>
  </thead>

  <tbody>
    <% @group.attributes.each do |attribute, value| %>
      <tr>
        <td><%= attribute %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
